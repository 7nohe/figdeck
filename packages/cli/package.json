{
  "name": "@figdeck/cli",
  "version": "0.1.0",
  "description": "CLI for converting Markdown to Figma Slides",
  "type": "module",
  "bin": {
    "figdeck": "./bin/figdeck.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --outDir dist",
    "dev": "tsup src/index.ts --format esm --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "ws": "^8.18.0",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/mdast": "^4.0.4",
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.13",
    "tsup": "^8.3.5",
    "typescript": "^5.3.3"
  }
}
