{
  "name": "@figdeck/plugin",
  "version": "1.3.0",
  "type": "module",
  "description": "Figma Plugin for generating slides from Markdown",
  "scripts": {
    "build": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2016 --format=iife --legal-comments=none --minify && node scripts/build-ui.js",
    "watch": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es2016 --format=iife --legal-comments=none --watch",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "bun-types": "^1.3.3",
    "esbuild": "^0.27.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@figdeck/shared": "workspace:*",
    "highlight.js": "^11.11.1"
  }
}
